{
    "files.exclude": {
        "**/.venv": true,
        "**/__pycache__": true,
        "**/.mypy_cache": true,
        "**/.idea": true,
        "**/.ruff_cache": true
    },
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "pyproject.toml": "uv.lock, .python-version",
        ".pre-commit-config.yaml": ".env, .checkmake.ini",
    },
    "cSpell.words": [
        "Ahmadi",
        "ahmadiehsan",
        "Ehsan",
        "fstring",
        "funcs",
        "kwargs",
        "tomli"
    ]
}
